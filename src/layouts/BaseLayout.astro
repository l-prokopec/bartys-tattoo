---
import "../styles/global.css";
import Header from '../components/Header.astro';

const {title} = Astro.props
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title> {title} </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <base href={import.meta.env.BASE_URL} />
    <link rel="icon" href={`${import.meta.env.BASE_URL}favicon.ico`} sizes="any" />
    <link rel="icon" href={`${import.meta.env.BASE_URL}favicon-32x32.png`} type="image/png" sizes="32x32" />
    <link rel="icon" href={`${import.meta.env.BASE_URL}favicon-16x16.png`} type="image/png" sizes="16x16" />
    <link rel="apple-touch-icon" href={`${import.meta.env.BASE_URL}apple-touch-icon.png`} />
</head>
<body>
    <Header />
    <main>
        <slot />
    </main>
</body>
</html>
